<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.NotConnectedFragment"
    android:background="@drawable/background_gradient">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvNotConnected"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/playfair_display_sc"
        android:text="Nu Sunteti Conectat"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:shadowColor="@android:color/black"
        android:outlineAmbientShadowColor="@android:color/black"
        android:outlineSpotShadowColor="@android:color/black"/>
<com.airbnb.lottie.LottieAnimationView
    android:id="@+id/bt_animation"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/tvNotConnected"
    app:lottie_loop="true"
    app:lottie_autoPlay="true"
    app:lottie_rawRes="@raw/bluetooth_animation"/>
    <Button
        android:id="@+id/btnConnect"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/bt_animation"
        android:text="Conectare"/>

</RelativeLayout>