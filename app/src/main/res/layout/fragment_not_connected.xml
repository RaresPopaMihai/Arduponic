<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.NotConnectedFragment"
    android:background="@drawable/background_gradient">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvNotConnected"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/playfair_display_sc"
        android:outlineAmbientShadowColor="@android:color/black"
        android:outlineSpotShadowColor="@android:color/black"
        android:shadowColor="@android:color/black"
        android:text="Nu Sunteti Conectat"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/bt_animation"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/tvNotConnected"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/bluetooth_animation"
        />


    <Button
        android:id="@+id/btnConnect"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/bt_animation"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:text="Conectare"
        android:fontFamily="@font/playfair_display_sc"
        android:background="@drawable/custom_button"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ltNC"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:lottie_rawRes="@raw/loading"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:visibility="gone"/>

</RelativeLayout>